<div class="container">
  <div class="wrap">
    <% @posts.each do |post| %>
      <%= link_to post_path(post.id) do %>
        <div class="box one">
          <h1> <%= post.title %></h1>
          <h5> <%=  post.text%></h5>
          <h5>Autor: <%=  post.author %></h5>
          <div class="poster p1">
            <h4><%= post.location %></h4>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
