<%= form_with model: @profile do |form| %>
  <div class="form-row">
    <div class="form-group col-md-6 col-md-offset-4 ">
      <%= form.label t('name') %><br>
      <%= form.text_field :name, class: 'form-control', placeholder: t('name'), readonly: true %><br>
      <%= form.label t('age') %><br>
      <%= form.text_field :age, class: 'form-control', placeholder: t('age'), readonly: true %><br>
      <%= form.label t('username'), readonly: true %><br>
      <div class="input-group">
        <span class="input-group-text">@</span>
        <%= form.text_field :username, class: 'form-control', placeholder: t('username'), readonly: true %><br>
      </div>
      <%= form.label t('city') %><br>
      <%= form.text_field :city, class: 'form-control', placeholder: t('city'), readonly: true %><br>
      <%= form.label t('state') %><br>
      <%= form.text_field :state, class: 'form-control', placeholder: t('state'), readonly: true  %><br>
      <div class='col-md-6'>
        <button class="btn btn-primary"><%= link_to 'Editar', edit_profile_path %></button>
      </div>
    </div>
  </div>
<% end %>
